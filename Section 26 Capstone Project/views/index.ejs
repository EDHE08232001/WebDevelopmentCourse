<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog Web App Demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="./styles/style.css" rel="stylesheet">
</head>
<body>
    <section id="header">
        <%- include("./partials/header.ejs") %>
    </section>

    <section id="posts">
        <div class="container mt-5">
            <div class="d-flex justify-content-between mb-3">
                <button class="btn btn-primary" onclick="location.href='/create-post'">Create Post</button>
            </div>
            <div class="posts-list" style="max-height: 400px; overflow-y: scroll;">
                <% if(posts.length > 0) { %>
                    <% posts.forEach(function(post, index) { %>
                        <div class="card mb-3">
                            <div class="card-body">
                                <p class="card-text"><%= post %></p>
                                <button class="btn btn-danger" onclick="location.href='/delete-post?postIndex=<%= index %>'">Delete</button>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <p>There are no posts so far.</p>
                <% } %>
            </div>
        </div>
    </section>

    <section id="footer">
        <%- include("./partials/footer.ejs") %>
    </section>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
